<h1>My tasks</h1>

<% @tasks.each do |task| %>
  <% if task.completed == true %>
    <li><input type="checkbox" checked>  <%= link_to task.title, task_path(task) %>
      <%= link_to "Delete", task_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
    </li>
    <% else %>
    <li><input type="checkbox">  <%= link_to task.title, task_path(task) %>
      <%= link_to "Delete", task_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
<% end %>

<%= link_to "+ add a new task", tasks_new_path %>
